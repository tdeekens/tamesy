{
  "name": "tamesy",
  "version": "1.1.1",
  "description": "Tames a set of wild concurrent promises",
  "main": "src/index.js",
  "scripts": {
    "demo": "DEBUG=tamesy babel-watch demo/index.js",
    "lint": "xo",
    "test": "tape -r babel-register test/**/*.test.js | tap-summary",
    "test:watch": "NODE_PATH=. tape-watch -r babel-register test/**/*.test.js -o '| tap-summary'",
    "build": "npm run build:umd && npm run build:umd:min",
    "prebuild:umd": "rimraf dist/umd/**",
    "build:umd": "webpack",
    "build:umd:min": "webpack",
    "preversion": "npm run build"
  },
  "files": [
    "readme.md",
    "src/index.js",
    "dist/**"
  ],
  "pre-commit": [
    "lint",
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tdeekens/tamesy.git"
  },
  "author": "Tobias Deekens <nerd@tdeekens.name>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tdeekens/tamesy/issues"
  },
  "homepage": "https://github.com/tdeekens/tamesy#readme",
  "xo": {
    "semicolon": false,
    "space": 2,
    "rules": {
      "object-curly-spacing": [2, "always", {
        "arraysInObjects": false
      }],
      "arrow-parens": ["error", "always"]
    }
  },
  "devDependencies": {
    "babel-core": "6.18.2",
    "babel-loader": "6.2.8",
    "babel-preset-es2015": "6.18.0",
    "babel-register": "6.18.0",
    "babel-watch": "2.0.3",
    "debug": "2.3.3",
    "pre-commit": "1.1.3",
    "rimraf": "2.5.4",
    "sinon": "2.0.0-pre.2",
    "tap-summary": "3.0.1",
    "tape": "^4.6.0",
    "tape-promise": "2.0.0",
    "tape-watch": "2.2.4",
    "webpack": "1.13.3",
    "webpack-merge": "0.20.0",
    "webpack-validator": "2.2.9",
    "xo": "0.17.1"
  }
}
