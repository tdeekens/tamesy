{
  "name": "tamesy",
  "version": "1.1.2",
  "description": "Tames a set of wild concurrent promises",
  "main": "src/index.js",
  "scripts": {
    "demo": "DEBUG=tamesy babel-watch demo/index.js",
    "lint": "xo",
    "test": "tape -r babel-register test/**/*.test.js | tap-summary",
    "test:watch": "NODE_PATH=. tape-watch -r babel-register test/**/*.test.js -o '| tap-summary'",
    "build": "npm run build:umd && npm run build:umd:min",
    "prebuild:umd": "rimraf dist/umd/**",
    "build:umd": "webpack",
    "build:umd:min": "webpack",
    "preversion": "npm run build"
  },
  "files": [
    "readme.md",
    "src/index.js",
    "dist/**"
  ],
  "pre-commit": [
    "lint",
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tdeekens/tamesy.git"
  },
  "author": "Tobias Deekens <nerd@tdeekens.name>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tdeekens/tamesy/issues"
  },
  "homepage": "https://github.com/tdeekens/tamesy#readme",
  "xo": {
    "semicolon": false,
    "space": 2,
    "rules": {
      "object-curly-spacing": [
        2,
        "always",
        {
          "arraysInObjects": false
        }
      ],
      "arrow-parens": [
        "error",
        "always"
      ]
    }
  },
  "devDependencies": {
    "babel-core": "^6.24.0",
    "babel-loader": "^7.0.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-register": "^6.24.0",
    "babel-watch": "^2.0.6",
    "debug": "^2.6.3",
    "pre-commit": "^1.2.2",
    "rimraf": "^2.6.1",
    "sinon": "^2.1.0",
    "tap-summary": "^3.0.2",
    "tape": "^4.6.0",
    "tape-promise": "^2.0.1",
    "tape-watch": "^2.3.0",
    "webpack": "^2.3.2",
    "webpack-merge": "^4.1.0",
    "xo": "^0.18.1"
  }
}
